generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String?
  published Boolean  @default(false)
  viewCount Int      @default(0)
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Team {
  id          Int    @id @default(autoincrement())
  name        String
  players     Json
  wins        Int
  losses      Int
  ties        Int
  gamesPlayed Int

  team1Games  Game[] @relation("Team1Games")
  team2Games  Game[] @relation("Team2Games")
  winnerGames Game[] @relation("WinnerGames")
}

model Game {
  id         Int    @id @default(autoincrement())
  team1      Team   @relation("Team1Games", fields: [team1Id], references: [id], onDelete: Cascade)
  team1Id    Int
  team2      Team   @relation("Team2Games", fields: [team2Id], references: [id], onDelete: Cascade)
  team2Id    Int
  team1Score Int
  team2Score Int
  winner     Team?  @relation("WinnerGames", fields: [winnerId], references: [id], onDelete: SetNull)
  winnerId   Int?
  date       DateTime
}
